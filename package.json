  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.0",
    "concurrently": "^3.5.1",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "puppeteer": "^13.5.1",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
